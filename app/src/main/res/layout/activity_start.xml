<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.muthukumart.onlineshoppingworld.Start"
    android:background="@drawable/android_background"
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TextView
            android:layout_width="368dp"
            android:layout_height="50dp"
            android:id="@+id/online"
            android:text="Online World"
            android:gravity="center"
            android:textSize="30dp"
            android:textStyle="bold"/>
    <Button
        android:id="@+id/bt2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/online"
        android:layout_marginTop="50dp"
        android:text="Shopping"
        android:textColor="#ffffff"
        android:background="@color/cherry"
        android:textStyle="italic"/>

    <Button
        android:id="@+id/bt3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_toRightOf="@id/bt2"
        android:layout_marginStart="50dp"
        android:layout_below="@+id/online"
        android:layout_marginTop="50dp"
        android:text="Ticket Booking"
        android:textColor="#ffffff"
        android:background="@color/chromeyellow"
        android:textStyle="italic"/>

    <Button
        android:id="@+id/bt4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/bt2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:text="Room Booking"
        android:textColor="#ffffff"
        android:background="@color/darkgreen"
        android:textStyle="italic"/>

    <Button
        android:id="@+id/bt5"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_toRightOf="@id/bt4"
        android:layout_below="@id/bt2"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:text="food Ordering"
        android:textColor="#ffffff"
        android:background="@color/Brown"
        android:textStyle="italic"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
