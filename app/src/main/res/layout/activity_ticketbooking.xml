<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.muthukumart.onlineshoppingworld.ticketbooking"
     >

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="485dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="490dp"
                android:layout_height="50dp"
                android:id="@+id/book"
                android:text="Booking Sites"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:textSize="30dp"
                android:textStyle="bold"/>
            <ImageButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/redbus"
                android:id="@+id/ib18"
                android:layout_alignParentStart="true"
               android:layout_marginStart="5dp"
                android:layout_below="@id/book"
                 />
            <ImageButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/bookmytrain"
                android:id="@+id/ib19"
                android:soundEffectsEnabled="true"
                android:layout_toRightOf="@id/ib18"
                android:layout_marginStart="60dp"
                android:layout_below="@id/book" />
            <ImageButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/airtours"
                android:id="@+id/ib20"
                android:soundEffectsEnabled="true"
                android:layout_below="@id/ib18"
                android:layout_marginStart="5dp"
                android:layout_marginTop="40dp"/>
            <ImageButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/flywidus"
                android:id="@+id/ib21"
                android:soundEffectsEnabled="true"
                android:layout_toRightOf="@id/ib20"
                android:layout_below="@id/ib19"
                android:layout_marginStart="60dp"
                android:layout_marginTop="40dp" />
            <ImageButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/onetravel"
                android:id="@+id/ib22"
                android:layout_below="@id/ib20"
                android:layout_marginStart="5dp"
                android:layout_marginTop="40dp"/>
            <ImageButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/smarttrip"
                android:id="@+id/ib23"
                android:soundEffectsEnabled="true"
                android:layout_below="@id/ib21"
                android:layout_toRightOf="@id/ib22"
                android:layout_marginStart="60dp"
                android:layout_marginTop="40dp"/>
            <ImageButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/travelocity"
                android:id="@+id/ib24"
                android:soundEffectsEnabled="true"
                android:layout_below="@id/ib22"
                android:layout_marginStart="5dp"
                android:layout_marginTop="40dp"/>
            <ImageButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/booking"
                android:id="@+id/ib25"
                android:soundEffectsEnabled="true"
                android:layout_toRightOf="@id/ib24"
                android:layout_below="@id/ib23"
                android:layout_marginStart="60dp"
                android:layout_marginTop="40dp"/>
            <ImageButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/orbitz"
                android:id="@+id/ib26"
                android:soundEffectsEnabled="true"
                android:layout_below="@id/ib24"
                android:layout_marginStart="5dp"
                android:layout_marginTop="40dp"/>
            <ImageButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/priceline"
                android:id="@+id/ib27"
                android:soundEffectsEnabled="true"
                android:layout_toRightOf="@id/ib26"
                android:layout_below="@id/ib25"
                android:layout_marginStart="60dp"
                android:layout_marginTop="40dp"/>
        </RelativeLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
